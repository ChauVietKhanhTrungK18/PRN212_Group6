<Window x:Class="Task_Management_System.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Username"/>
            <TextBox x:Name="txtUsername" Margin="0,5"/>
            <TextBlock Text="Full Name" Margin="0,10,0,0"/>
            <TextBox x:Name="txtFullName" Margin="0,5"/>
            <TextBlock Text="Email" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" Margin="0,5"/>
            <TextBlock Text="Password" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5"/>
            <TextBlock Text="Confirm Password" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,5"/>
            <Button Content="Register" Click="BtnRegister_Click" Margin="0,15,0,0" Height="35"/>
        </StackPanel>
    </Grid>
</Window> 